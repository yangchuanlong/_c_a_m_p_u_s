page{
    width: 100%;
    height:100%;
}
.container {
    padding:0;
}
.searchWrapper{
    width:100%;
    position: fixed;
    background: #fff;
    top: 0;
    z-index: 1;
}
.searchWrapper input{
    width: 690rpx;
    height: 70rpx;
    background-color: #fff;
    box-shadow: 0px 5rpx 30rpx 0px #eef1f5;
    margin: 0 auto;
    border-radius: 10rpx;
}
.searchWrapper .iconsousuo{
    position: absolute;
    right: 50rpx;
    top: 22rpx;
    width: 26rpx;
    height: 26rpx;
    color: #bbc2c9;
}
.gap{
    position: fixed;
    height: 40rpx;
    width: 100%;
    top: 70rpx;
    background: white;
}
.tabs{
    width:100%;
    box-sizing: border-box;
    position: fixed;
    top: 110rpx;
    white-space: nowrap;
    height: 58rpx;
    background: #fff;
}
.tabs view{
    display:inline-block;
    width: 20%;
    text-align:center;
    height: 58rpx;
    font-size: 30rpx;
    line-height: 36rpx;
    letter-spacing: 0px;
    color: #8b95a3;
    position: relative;
}
.tabs .active{
    color: #93c3ff;
}
.tabs .dot{
    display:none;
    width: 10rpx;
    height: 10rpx;
    top: 36rpx;
    left: 50%;
    transform: translateX(-50%);
    background: #93c3ff;
}
.tabs .active .dot{
    position: absolute;
    display:block;
    border-radius: 50%;
}

.sectionWrapper{
    flex: 1;
    width: 100%;
    margin-top: 170rpx;
}
.icons{
    position:fixed;
    bottom:0;
    right:0;
    width: 200rpx;
    height:200rpx;
}

.logo{
    position:absolute;
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    bottom:0;
    right:0;
}
.editIcon, .userIcon, .message{
    position:absolute;
    background:#c2c0c0;
    right:10rpx;
    bottom:120rpx;
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    padding:6rpx;
}
.userIcon{
    right: 100rpx;
    bottom: 100rpx;
}
.message{
    right: 120rpx;
    bottom: 10rpx;
}
.unreadNum{
    position: absolute;
    display: flex;
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    background:red;
    justify-content: center;
    align-items: center;
    color:white;
    top:100rpx;
    left:50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}
.section{
  width: 100%;
  margin-top:44rpx;
}
.item{
    padding: 0rpx 34rpx;
}
.item:not(:first-child) {
  margin-top:6rpx;
}
.author{
    display:flex;
    align-items: center;
}
.author .avatar{
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
}
.author .nickName{
    margin-left: 24rpx;
    height: 28rpx;
    font-size: 30rpx;
    line-height: 36rpx;
    letter-spacing: 0px;
    color: #6e7b8c;
}
.author .date{
    height: 21rpx;
    font-size: 26rpx;
    line-height: 36rpx;
    letter-spacing: 0px;
    color: #b5bdc5;
}
.author .gradeTag{
    margin-left:24rpx;
    height: 38rpx;
    font-size: 20rpx;
    color: #feffff;
    line-height: 38rpx;
    background-color: #ff8e85;
    border-radius: 19rpx;
    padding: 0 16rpx;
}
.title{
    font-weight: bold;
    font-size: 32rpx;
    margin-top:12rpx;
}
.shortContent{
    font-size: 28rpx;
    margin-top: 12rpx;
}
.imagesWrapper{
    margin: 12rpx 0;
}
.imagesWrapper image{
    display: inline-block;
    margin-right: 8rpx;
    width:100rpx;
    height:100rpx;
}
.actions{
  display:flex;
  font-size: 26rpx;
  margin-top: 12rpx;
  color: #D0D1D1;
  padding-bottom: 12rpx;
}
.actions image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}
.actions view{
  margin-left: 16rpx;
}
.loading{
  width: 100%;
  height: 100rpx;
}
.loading image{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  display:block;
}

.overlay{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
}
.overlay image{
    width: 50rpx;
    height: 50rpx;
}
.dlg-wrapper{
    background: white;
    border-radius: 8rpx;
    width: 80vw;
    padding: 24rpx;
    text-align: center;
}
.dlg-title{
    text-align:left;
}
.dlg-wrapper .columns{
    display: flex;
    flex-wrap: wrap;
    margin-top: 24rpx;
}
.dlg-wrapper .columns .column{
    width: 33.33%;
}
.dlg-wrapper .columns text{
    display:inline-block;
    padding: 6rpx 24rpx;
    border:1rpx solid gray;
    margin-top: 8rpx;
}
.dlg-wrapper .column.chosen text{
    border:4rpx solid blue;
}
