page{
    width: 100%;
    height:100%;
}
.container {
    padding:0;
}
.searchWrapper{
  width:100%;
  position: fixed;
  background: #fff;
  top: 0;
}
.searchWrapper input{
  width: calc(100% - 36rpx);
  margin: 8rpx auto 12rpx auto;
  box-shadow: 0 0 32rpx #e0e0e0;
}
.tabs{
    width:100%;
    font-size:32rpx;
    background: #E8E9ED;
    position: fixed;
    top: 72rpx;
    border-bottom: 1px solid #ddd;
    white-space: nowrap;
}
.tabs view{
    padding: 24rpx 0;
    display:inline-block;
    width: 20vw;
    text-align:center;
}
.tabs .active{
    color: #81afe3;
    position: relative;
}
.tabs .active::after{
    position: absolute;
    content: '';
    bottom: 4rpx;
    display:block;
    width: 12rpx;
    height: 12rpx;
    left: 50%;
    background: #81afe3;
    border-radius: 50%;
    transform: translateX(-50%);
}

.sectionWrapper{
    flex: 1;
    width: 100%;
    margin-top: 176rpx;
}
.icons{
    position:fixed;
    bottom:0;
    right:0;
    width: 200rpx;
    height:200rpx;
}

.logo{
    position:absolute;
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    bottom:0;
    right:0;
}
.editIcon, .userIcon, .message{
    position:absolute;
    background:#c2c0c0;
    right:10rpx;
    bottom:120rpx;
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    padding:6rpx;
}
.userIcon{
    right: 100rpx;
    bottom: 100rpx;
}
.message{
    right: 120rpx;
    bottom: 10rpx;
}
.unreadNum{
    position: absolute;
    display: flex;
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    background:red;
    justify-content: center;
    align-items: center;
    color:white;
    top:100rpx;
    left:50rpx;
    overflow: hidden;
    text-overflow: ellipsis;
}
.section{
  width: 100%;
  margin-top:6rpx;
}
.item{
    background: #E8E9ED;
    padding: 0rpx 12rpx;
}
.item:not(:first-child) {
  margin-top:6rpx;
}
.author{
    display:flex;
    border-bottom: 4rpx solid #ddd;
    padding: 12rpx 6rpx;
}
.author .avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.author .nickName{
    margin-left: 16rpx;
}
.author .date{
    color: #ccc;
    margin-left: 12rpx;
}
.author .gradeTag{
    margin-left: 24rpx;
}
.title{
    font-weight: bold;
    font-size: 32rpx;
    margin-top:12rpx;
}
.shortContent{
    font-size: 28rpx;
    margin-top: 12rpx;
}
.imagesWrapper{
    margin: 12rpx 0;
}
.imagesWrapper image{
    display: inline-block;
    margin-right: 8rpx;
    width:100rpx;
    height:100rpx;
}
.actions{
  display:flex;
  font-size: 26rpx;
  margin-top: 12rpx;
  color: #D0D1D1;
  padding-bottom: 12rpx;
}
.actions image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}
.actions view{
  margin-left: 16rpx;
}
.loading{
  width: 100%;
  height: 100rpx;
}
.loading image{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  display:block;
}

.overlay{
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: center;
    align-items: center;
}
.overlay image{
    width: 50rpx;
    height: 50rpx;
}
.dlg-wrapper{
    background: white;
    border-radius: 8rpx;
    width: 80vw;
    padding: 24rpx;
    text-align: center;
}
.dlg-title{
    text-align:left;
}
.dlg-wrapper .columns{
    display: flex;
    flex-wrap: wrap;
    margin-top: 24rpx;
}
.dlg-wrapper .columns .column{
    width: 33.33%;
}
.dlg-wrapper .columns text{
    display:inline-block;
    padding: 6rpx 24rpx;
    border:1rpx solid gray;
    margin-top: 8rpx;
}
.dlg-wrapper .column.chosen text{
    border:4rpx solid blue;
}
