page{
    width: 100%;
    height:100%;
}
.container {
    padding:0;
}
.searchWrapper{
  width:100%;
  position: fixed;
  background: #fff;
  top: 0;
}
.searchWrapper input{
  border: 1px solid #7e7e7e;
  width: calc(100% - 36rpx);
  margin: 0 auto 12rpx auto;
}
.tabs{
    padding: 24rpx;
    width:100%;
    font-size:32rpx;
    font-weight:bold;
    background: #E8E9ED;
    position: fixed;
    top: 60rpx;
    border-bottom: 1px solid #ddd;
}
.tabs view{
    padding: 8rpx 32rpx;
    display:inline-block;
}
.tabs .active{
    border-bottom:6rpx solid teal;
}

.sectionWrapper{
    flex: 1;
    width: 100%;
    margin-top: 176rpx;
}
.icons{
    position:fixed;
    bottom:0;
    right:0;
    width: 200rpx;
    height:200rpx;
}

.logo{
    position:absolute;
    width:100rpx;
    height:100rpx;
    border-radius:50%;
    bottom:0;
    right:0;
}
.editIcon, .userIcon, .message{
    position:absolute;
    background:#c2c0c0;
    right:10rpx;
    bottom:120rpx;
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    padding:6rpx;
}
.userIcon{
    right: 100rpx;
    bottom: 100rpx;
}
.message{
    right: 120rpx;
    bottom: 10rpx;
}
.section{
  width: 100%;
  margin-top:6rpx;
}
.item{
    background: #E8E9ED;
    padding: 0rpx 12rpx;    
}
.item:not(:first-child) {
  margin-top:6rpx;
}
.author{
    display:flex;
    border-bottom: 4rpx solid #ddd;
    padding: 12rpx 6rpx;
}
.author .avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.author .nickName{
    margin-left: 16rpx;
}
.author .date{
    color: #ccc;
    margin-left: 12rpx;
}
.title{
    font-weight: bold;
    font-size: 32rpx;
    margin-top:12rpx;
}
.shortContent{
    font-size: 28rpx;
    margin-top: 12rpx;
}
.imagesWrapper{
    margin: 12rpx 0;
}
.imagesWrapper image{
    display: inline-block;
    margin-right: 8rpx;
    width:100rpx;
    height:100rpx;
}
.actions{
  display:flex;
  font-size: 26rpx;
  margin-top: 12rpx;
  color: #D0D1D1;
  padding-bottom: 12rpx;
}
.actions image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
}
.actions view{
  margin-left: 16rpx;
}
.loading{
  width: 100%;
  height: 100rpx;
}
.loading image{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  display:block;
}