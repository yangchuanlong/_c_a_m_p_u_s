@import '../detail/replyItem.wxss';
page{
  height: 100vh;
}
.container{  
  padding: 0;
  background: #f5f5f5;
  min-height: 100%;
  width: 100vw;
  align-items: unset;
}
.replyAuthor{
  background: #fff;
  padding: 0 24rpx 24rpx;
}
.mainContent{
  margin-top: 24rpx;
  text-indent: 64rpx;
}

.subReplies{ 
  background: #fff;
  padding: 24rpx 24rpx 100rpx;
  flex: 1;
}
.subReplyContent{
  padding-left: 84rpx;
  color: #6e7b8c;
  font-size: 30rpx;
}
.replyItem:first-child{
  margin-top: 0;
}
.subReplyContent .nickName{
  color:#66a1ff;
}
.summary{
  font-size: 30rpx;
  color: #ccc;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f5f5f5;
  margin-top: 20rpx;
  background: #fff;
}

.inputWrapper{
  position: fixed;
  bottom: 0;
  border: 1px solid #f8f8f8;
  display: flex;
  align-items: center;
  width: calc(100vw - 48rpx);
  box-sizing: border-box;
  margin: 0 24rpx 6rpx;
  height: 88rpx;
  border-radius: 44rpx;
  padding: 0 32rpx;
  background:#fff;
  box-shadow: 0 6rpx 0 6rpx #fff;
}
.inputWrapper input{
  flex: 1;
}
.inputWrapper image{
  width: 40rpx;
  height: 40rpx;
}