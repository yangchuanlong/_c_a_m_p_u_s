
.container{
  padding: 0;
}
.item{
  display: flex;
  width: 100%;
  padding: 24rpx;
  box-sizing: border-box;
}
.left{
  position: relative;
}
.left text{
  display:block;
}
.unreadNum{
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  background: red;
  color: white;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 50%;
  text-align: center;
}
.icon{
  font-size: 60rpx;
  border:1px solid gray;
  border-radius: 50%;
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
}
.right{
  flex: 1;
  margin-left: 24rpx;
  display:flex;
  flex-direction: column;
  height: 100%;
  justify-content: space-between;
  position: relative;
}
.right .title{
  font-size: 40rpx;
}
.right .abstract{
  font-size: 32rpx;
}
.time{
  color: #e0e0e0;
  font-size: 32rpx;
}
.loading{
  width: 100%;
  height: 100rpx;
}
.loading image{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  display:block;
}
