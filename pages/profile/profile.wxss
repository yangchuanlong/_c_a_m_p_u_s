page{
    height: 100%;
}
.container{
    width: 100vw;
    height: 100vh;
    position: relative;
    background-color: #fbfbfc;
    display:block;
    padding: 0;
}
.container.saving{
    pointer-events: none;
    opacity: .5;
}
.bgImg{
    height: 516rpx;
    width: 100vw;
    position: absolute;
    left: 0;
    top: 0;
}
.header{
    width: 100%;
    z-index: 2;
    position: relative;
    height: 445rpx;
    padding-top: 1rpx;
}
.editIcon{
    font-size: 40rpx;
    right: 30rpx;
    top: 30rpx;
    position: absolute;
    color: #feffff;
}
.userCollegeGrade{
    display:flex;
    justify-content:center;
    font-size: 26rpx;
    letter-spacing: 1rpx;
    margin-top: 20rpx;
    color: #fff;
}
.grade{
    margin-left: 16rpx;
}

.nickName{
    text-align: center;
    font-size: 32rpx;
    color: #fff;
    margin-top: 32rpx;
}
.avatar {
    margin: 100rpx auto 0;
    width: 140rpx;
    height: 140rpx;
    display: block;
    border-radius: 50%;
}
.main{
    z-index:3;
    position:relative;
    box-sizing: border-box;
    width: 690rpx;
    margin: 0 auto;
    overflow: hidden;
}
.main navigator{    
    display: flex;
    font-size: 30rpx;
    color: #6e7b8c;
    align-items: center;
    height: 140rpx;
    background: white;
    box-sizing: border-box;
    padding: 0 55rpx;
    border-radius: 10rpx;
    box-shadow: 0px 5px 50px 0px #eef1f5;
}
.main navigator .icon{
    width: 80rpx;
    height: 80rpx;
    margin-right: 30rpx;
}
.main navigator .rightArrow{
    width: 50rpx;
    height: 50rpx;
}
.main navigator:not(:first-child) {
  margin-top: 40rpx;
}

.main .navigator-hover:first-child{
    opacity: 1;
}

.dlg {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 0 24rpx;
  z-index: 10; 
  background: rgba(0, 0, 0, 0.05);
}
.dlg .closeIcon{
  position: absolute;
  right: 32rpx;
  top: 40rpx;
  font-size: 32rpx;
  color: #8b95a3;
}
.dlg .wrapper{
  position: absolute;
  width: calc(100% - 48rpx);
  box-sizing: border-box;  
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: white;
  border-radius: 8rpx;
  box-shadow: 0px 5rpx 30rpx #eef1f5;
}
.dlg .content{
  margin-top: 40rpx;
}
.title {
  font-size:40rpx;
  color:#8b95a3;
  padding-left: 24rpx;
  margin-top: 40rpx;
}
.colWrapper{
    display: inline-block;
    width: 25%;
    box-sizing: border-box; 
    padding: 0 24rpx;
    margin-top: 24rpx;
}
.colWrapper view{
  width: 100%;
  box-sizing: border-box;
  text-align: center;
  border-radius:30rpx;
  border:solid 1rpx #6e7b8c;
  opacity:0.8;
  font-size:30rpx;
  color:#6e7b8c;
  height:60rpx;
  line-height:60rpx;
}
.colWrapper .selected{
  background-image:linear-gradient(90deg, #66a1ff 0%, #94c5ff 100%);
  color:#fefefe;
  box-shadow:0px 3px 15px 0px rgba(73, 144, 226, 0.3);
  border-color:transparent;
  background-repeat:no-repeat;
  background-origin:border-box;
}

.saveBtn{
  width:420rpx;
  margin:100rpx auto 40rpx;
  height:86rpx;
  line-height:86rpx;
  background:linear-gradient(90deg, #66a1ff 0%, #94c5ff 100%), linear-gradient(#e5bbbc, #e5bbbc);
  box-shadow:0px 3rpx 15rpx rgba(73, 144, 226, 0.3);
  border-radius:43rpx;
  background-origin:border-box;
}