<button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 授权获取头像昵称 </button>
<view wx:else class="container">
    <textarea placeholder='问题描述' bindinput='onInput'>
    </textarea>
    <view class="imageWrapper">
        <view wx:for="{{tempFilePaths}}" class="imageItemWrapper">
            <image src="{{item}}"></image>
            <text class="deleteIcon" data-index="{{index}}" bindtap="deleteChosenImg">x</text>
        </view>
        <view class="addImgBtn" bindtap="onChooseImg">
            +
        </view>
    </view>
    <view class='anonymous'>
        <checkbox-group bindchange="checkboxChange" bindchange="onToggle">
            <checkbox value="anonymous" checked="{{false}}" /> <text>匿名发表</text>
        </checkbox-group>
    </view>
    <button
      class='confirmBtn'
      bindtap="submit"
      type="primary"
      loading="{{loading}}"
      disabled='{{disabled}}'
    >提问</button>
</view>
