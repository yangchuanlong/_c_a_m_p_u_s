
page{
    width: 100vw;
    height: 100vh;
}
.container{
    padding: 0;
    justify-content: center;
}
.title{
    padding: 24rpx 0;
    width: 100%;
    text-align: center;
}
.main{
    width: 80%;
    border: 1rpx solid rgba(153, 153, 153, 1);
    border-radisu: 8rpx;
    padding: 40rpx 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 950rpx;
}
.selectList{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.select{
    width: 90%;
    height: 190rpx;
    margin-top: 6rpx;
}
.selectedCollege, .selectedGrade, .selectedOption{
    border: 1rpx solid gray;
    height: 48rpx;
    line-height: 48rpx;
}

.popup{
    border: 1px solid #1890ff;
    border-top:none;
    visibility: none;
    overflow-y: auto;
    max-height: calc(190rpx - 52rpx);
}
.submitBtn, .registerBtn{
    width: 240rpx;
}

.nickNameInput{
    margin-top: 48rpx;
}
.hr{
    border-bottom: 1rpx solid #e6e6e6;
    width: 90%;
    margin-top: 24rpx;
}

.registerBtn{
    margin-top: 24rpx;
}

