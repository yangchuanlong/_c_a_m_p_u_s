
page{
    width: 100vw;
    height: 100vh;
}
.container{
    padding: 1rpx 0 0;
    display: block;
    position: relative;
}
.headerBg{
  position: absolute;
  top: 0;
  left:0;
  width: 100%;
  height: 561rpx;
}
.title{
    font-size: 34rpx;
    text-align: center;
    color: #6e7b8c;
}
.main{
    width: 92%;
    padding: 60rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    margin: 258rpx  auto 0;
    background-color: #ffffff;
    box-shadow: 0px 10px 30px 0px #eef1f5;
    border-radius: 10rpx;
    box-sizing: border-box;
}
.selectList{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.select{
    width: 570rpx;
    height: 190rpx;    
    position: relative;
    z-index: 1;
}
.collegeSelect{
  margin-top: 80rpx;
}
.selectedCollege, .selectedGrade, .selectedOption{
    border: solid 1rpx #ced9e5;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 30rpx;
    color: #8b95a3;
    font-weight: bold;
    padding-left: 19rpx;   
}
.select .arrow-down{
  width:80rpx;
  height:70rpx;
  position: absolute;
  top: 0;
  right: 0;
}
.popup{
    border-radius: 10px;
	  border: solid 1px #ced9e5;    
    visibility: none;
    overflow-y: auto;
    max-height: 138rpx;
    background: white;
}
.popup view{
  height: 68rpx;
  line-height: 68rpx;
  font-size: 30rpx;
  color: #8b95a3;
  padding-left: 18rpx;
}
.submitBtn, .registerBtn{
    width: 420rpx;
    height: 86rpx;
    line-height: 86rpx;
    background-image: linear-gradient(90deg, #66a1ff 0%, 	#94c5ff 100%);
    box-shadow: 0px 3rpx 15rpx 0rpx rgba(73, 144, 226, 0.3);
    border-radius: 43rpx;
    color: white;
    font-size: 36rpx;
}

.nickNameInput{
    margin-top: 48rpx;
}
.hr{
    border-bottom: 1rpx solid #e6e6e6;
    width: 90%;
    margin-top: 24rpx;
}

.registerBtn{
    margin-top: 24rpx;
}

